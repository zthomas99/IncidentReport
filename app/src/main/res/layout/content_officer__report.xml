<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobileproject.incidentreport.Activities.Officer_Report"
    android:background="@drawable/officermenubackground">

    <TextView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/reportDescription"
        android:background="@color/accent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Get Directions"
        android:background="@drawable/roundbutton"
        android:id="@+id/directionsbutton"
        android:textColor="@color/accent"
        android:layout_below="@+id/respondbutton"
        android:layout_alignLeft="@+id/photogallerybutton"
        android:layout_alignStart="@+id/photogallerybutton"
        android:onClick="getDirections"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Photo Gallery"
        android:background="@drawable/roundbutton"
        android:id="@+id/photogallerybutton"
        android:textColor="@color/accent"
        android:layout_marginBottom="107dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Contact User"
        android:background="@drawable/roundbutton"
        android:id="@+id/contacuserbutton"
        android:textColor="@color/accent"
        android:layout_below="@+id/respondbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="reachOut"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Respond"
        android:background="@drawable/roundbutton"
        android:id="@+id/respondbutton"
        android:textColor="@color/accent"
        android:layout_alignBaseline="@+id/photogallerybutton"
        android:layout_alignBottom="@+id/photogallerybutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="alertUser" />
</RelativeLayout>
